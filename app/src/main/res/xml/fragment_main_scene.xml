<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="3000">
        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@+id/animationButton"
                motion:framePosition="50"
                android:scaleX="3"
                android:scaleY="3"
                android:rotationX="360"
                android:rotationY="360"
                android:rotation="360" />
            <KeyPosition
                motion:motionTarget="@+id/animationButton"
                motion:framePosition="25"
                motion:keyPositionType="parentRelative"
                motion:percentX="-.1"
                motion:percentY=".5" />
            <KeyPosition
                motion:motionTarget="@+id/animationButton"
                motion:framePosition="75"
                motion:keyPositionType="parentRelative"
                motion:percentX=".85"
                motion:percentY=".75" />
        </KeyFrameSet>
        <OnClick motion:targetId="@id/animationButton"
            motion:clickAction="toggle" />
        <OnSwipe motion:maxVelocity="3.66"
            motion:maxAcceleration="1.1" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/animationButton"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            motion:layout_constraintBottom_toBottomOf="parent">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#FF03DAC5" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/animationButton"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="0dp"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#FF6200EE" />
        </Constraint>
    </ConstraintSet>
</MotionScene>